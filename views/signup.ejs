<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Signup</title>
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <main
      class="yellow-container d-flex flex-column justify-content-center align-items-center"
    >
      <!-- Signup form -->
      <form class="light-form" id="signup-form" action="/signup" method="POST">
        <%- include('partials/messages') %>

        <h1 class="mb-3">Signup</h1>
        <div class="form-input">
          <label for="username">Username</label>
          <input
            type="text"
            required
            name="username"
            placeholder="Your username"
            value="<%= typeof username != 'undefined' ? username : ''%>"
          />
        </div>
        <div class="form-input">
          <label for="email">Email</label>
          <input
            type="text"
            required
            name="email"
            placeholder="Your email"
            value="<%= typeof email != 'undefined' ? email : ''%>"
          />
        </div>
        <div class="form-input">
          <label for="profile_pic_url">Profile pic url</label>
          <input
            type="text"
            name="profile_pic_url"
            required
            placeholder="Your profile pic url"
            value="<%= typeof profile_pic_url != 'undefined' ? profile_pic_url : ''%>"
          />
        </div>
        <div class="form-input">
          <label for="type">Account type</label>
          <select
            name="type"
            required
            selected="<%= typeof type != 'undefined' ? type : 'Customer'%>"
          >
            <option value="Customer">Customer</option>
            <!-- <option value="Admin">Admin</option> -->
          </select>
        </div>
        <div class="form-input">
          <label for="password">Password</label>
          <input
            type="password"
            name="password"
            required
            placeholder="Your password"
            value="<%= typeof password != 'undefined' ? password : ''%>"
          />
        </div>
        <div>
          <input
            type="submit"
            value="signup"
            id="signup-submit"
            class="yellow-btn"
          />
        </div>
        <div>
          <span>Have an account?</span>
          <a href="/login" class="coloured-link">Login</a>
        </div>
      </form>
      <!-- End of Signup form -->
    </main>

    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script
      src="https://code.jquery.com/jquery-3.5.1.min.js"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
      integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
